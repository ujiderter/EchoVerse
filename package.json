{
  "name": "echoverse-backend",
  "version": "1.0.0",
  "description": "Backend API server for EchoVerse - Interactive Alternative Reality Explorer",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "setup": "node setup.js",
    "seed": "node scripts/seedData.js",
    "lint": "eslint *.js scripts/*.js --fix",
    "audit": "npm audit --audit-level=moderate",
    "deploy:local": "node scripts/deploy.js local",
    "deploy:heroku": "node scripts/deploy.js heroku",
    "deploy:vercel": "node scripts/deploy.js vercel",
    "deploy:production": "node scripts/deploy.js production",
    "docker:build": "docker build -t echoverse:latest .",
    "docker:run": "docker run -p 3001:3001 echoverse:latest",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "monitoring": "node scripts/monitoring.js"
  },
  "keywords": [
    "echoverse",
    "alternative-reality",
    "interactive",
    "storytelling",
    "multiverse",
    "decision-tree",
    "ai-powered",
    "visualization"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/echoverse.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/echoverse/issues"
  },
  "homepage": "https://github.com/your-username/echoverse#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^3.0.8",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-node": "^4.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "optionalDependencies": {
    "openai": "^4.24.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ]
  },
  "eslintConfig": {
    "extends": ["eslint:recommended", "node"],
    "env": {
      "node": true,
      "es2021": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error"
    }
  }
}